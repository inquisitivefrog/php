APP_NAME=Laravel
APP_ENV=local
APP_KEY=/run/secrets/app_key.txt
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

BROADCAST_CONNECTION=redis
CONCURRENCY_DRIVER=process

# ---------------------------------------------------
# Database (PostgreSQL via Docker)
# ---------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret

# ---------------------------------------------------
# Cache, Queue, Session (Redis via Docker)
# ---------------------------------------------------
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# ---------------------------------------------------
# Meilisearch (Docker)
# ---------------------------------------------------
MEILISEARCH_HOST=http://meilisearch:7700

# ---------------------------------------------------
# Mail (Mailpit container)
# ---------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="Laravel App"

# ---------------------------------------------------
# Laravel Features (Pennant, Cashier, etc.)
# ---------------------------------------------------
# Stripe settings (Cashier)
STRIPE_KEY=
STRIPE_SECRET=

# Pennant (uses Redis)
PENNANT_STORE=redis

# ---------------------------------------------------
# Vite (Front-end build system)
# ---------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

# ---------------------------------------------------
# Timezone / Locale
# ---------------------------------------------------
APP_TIMEZONE=UTC
APP_LOCALE=en

SCOUT_DRIVER=meilisearch
